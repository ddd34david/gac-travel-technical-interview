{% extends 'base.html.twig' %}

{% block title %}Editar stock{% endblock %}

{% block body %}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Editar stock del producto {{ product.name }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">    
                        <!-- CON ERROR 
                        <div class="form-group has-error has-danger">-->                 
                        <div class="form-group">
                            <label>Modificar stock *</label>
                            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form) %}
                                <div class="help-block with-errors">
                                    <ul class="list-unstyled">
                                        <li>Rellene este campo.</li>
                                    </ul>
                                </div>
                            {% endif %}
                            <!-- CON ERROR  
                            <div class="help-block with-errors">
                                <ul class="list-unstyled">
                                    <li>Rellene este campo.</li>
                                </ul>
                            </div>-->
                        </div>
                    </div>
                    <div class="col-md-12 mt-5 text-center">
                        <button type="submit" class="btn btn-primary mr-2">{{ accion|default('Modificar stock') }}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

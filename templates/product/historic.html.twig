{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Historico de stock de {{ product }}</h4>
                    </div>
                    <a href="{{ path('product_index') }}" class="btn btn-primary add-list">
                        Volver al listado
                    </a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data" role="row">
                                <th class="text-left">Usuario</th>
                                <th class="text-left">CÃ³digo</th>
                                <th class="text-left">Cambio stock</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for historic in historics %}
                            <tr>
                                <td class="text-left">{{ historic.myuser.username }}</td>
                                <td class="text-left">{{ historic.createdAt|date("m/d/Y H:i:s") }}</td>
                                <td class="text-left">{{ historic.stock }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div> 
        </div>
    </div>
</div>
{% endblock %}
